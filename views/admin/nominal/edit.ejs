<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>

<div class="content-wrapper">
   <!-- Content Header (Page header) -->
   <section class="content-header">
     <div class="container-fluid">
       <div class="row mb-2">
         <div class="col-sm-6">
           <h1>Nominal</h1>
         </div>
         <div class="col-sm-6">
           <ol class="breadcrumb float-sm-right">
             <li class="breadcrumb-item"><a href="/">Home</a></li>
             <li class="breadcrumb-item"><a href="/nominal">Nominal</a></li>
             <li class="breadcrumb-item active">Edit</li>
           </ol>
         </div>
       </div>
     </div><!-- /.container-fluid -->
   </section>

   <!-- Main content -->
   <section class="content">
     <div class="container-fluid">
       <div class="row">
         <div class="col-12">
            <div class="card card-primary">
               <div class="card-header">
                 <h3 class="card-title">Form Edit Nominal "<%= nominal.coinName %>"</h3>
               </div>
               <!-- /.card-header -->
               <!-- form start -->
               <form action="/nominal/edit/<%= nominal._id %>?_method=PUT" method="post">
                 <div class="card-body">
                  <div class="form-group">
                     <label>Nama Koin</label>
                     <select class="form-control select2" style="width: 100%;" name="coinName" required>
                       <option selected="selected">Pilih Koin</option>
                       <option value="GOLD" 
                           <% if(nominal.coinName === "GOLD"){ %>
                              selected
                           <% } %> 
                        >GOLD</option>
                       <option value="DIAMOND" 
                           <% if(nominal.coinName === "DIAMOND"){ %>
                              selected
                           <% } %> 
                        >DIAMOND</option>
                       <option value="GEMS" 
                           <% if(nominal.coinName === "GEMS"){ %>
                              selected
                           <% } %> 
                        >GEMS</option>
                        <option value="JEWEL" 
                           <% if(nominal.coinName === "JEWWL"){ %>
                              selected
                           <% } %> 
                        >JEWEL</option>
                       <option value="POINTS" 
                           <% if(nominal.coinName === "POINTS"){ %>
                              selected
                           <% } %> 
                        >POINTS</option>
                     </select>
                   </div>
                   <div class="form-group">
                     <label for="coinQuantity">Jumlah Koin</label>
                     <input type="number" class="form-control" value="<%= nominal.coinQuantity %>" name="coinQuantity" id="coinQuantity" placeholder="Masukkan Jumlah Koin" required>
                   </div>
                   <div class="form-group">
                     <label for="price">Harga</label>
                     <input type="number" class="form-control" value="<%= nominal.price %>" name="price" id="price" placeholder="Masukkan Harga" required>
                   </div>
                 </div>
                 <div class="card-footer">
                   <button type="submit" class="btn btn-primary">Simpan</button>
                 </div>
               </form>
             </div>
         </div>
         <!-- /.col -->
       </div>
       <!-- /.row -->
     </div>
     <!-- /.container-fluid -->
   </section>
   <!-- /.content -->
 </div>

 <%- include ../../partials/footer.ejs %>
 <%- include ../../partials/js.ejs %>
